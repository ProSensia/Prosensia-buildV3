<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect index.html to /
    RewriteCond %{THE_REQUEST} /index\.html [NC]
    RewriteRule ^index\.html$ / [L,R=301]

    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>

